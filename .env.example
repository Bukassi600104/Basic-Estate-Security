# AWS
# Used by Amplify and local dev.
AWS_REGION="eu-north-1"

# Optional override: some hosting environments set AWS_REGION automatically to the
# compute region. If your DynamoDB tables are in a different region, set this.
# APP_AWS_REGION="eu-north-1"

# Cognito (User Pool)
# After `terraform apply` (infra/), copy these from Terraform outputs.
COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"
COGNITO_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Optional: if you need Cognito admin APIs in a different region
# COGNITO_USER_POOL_REGION="eu-north-1"

# DynamoDB tables
# Terraform default naming is: ${project_name}_<Table>
# (default project_name is "basic-estate-security")
DDB_TABLE_ESTATES="basic-estate-security_Estates"
DDB_TABLE_USERS="basic-estate-security_Users"
DDB_TABLE_RESIDENTS="basic-estate-security_Residents"
DDB_TABLE_CODES="basic-estate-security_Codes"
DDB_TABLE_GATES="basic-estate-security_Gates"
DDB_TABLE_VALIDATION_LOGS="basic-estate-security_ValidationLogs"
DDB_TABLE_ACTIVITY_LOGS="basic-estate-security_ActivityLogs"
DDB_TABLE_PWA_INVITES="basic-estate-security_PwaInvites"
DDB_TABLE_UNIQ="basic-estate-security_Uniq"
